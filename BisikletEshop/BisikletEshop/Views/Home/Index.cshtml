@model BisikletEshop.Models.AnaSayfaCokluListeleme
@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<link href="~/web/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<!-- jQuery (Bootstrap's JavaScript plugins) -->
	<script src="~/web/js/jquery.min.js"></script>
	<!-- Custom Theme files -->
	<link href="~/web/css/form.css" rel="stylesheet" type="text/css" media="all" />
	<link href="~/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
	<!-- Custom Theme files -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Bike-shop Responsive web template" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!--webfont-->
	<link href='http://fonts.googleapis.com/css?family=Roboto:500,900,100,300,700,400' rel='stylesheet' type='text/css'>
	<!--webfont-->
	<!-- dropdown -->
	<script src="~/web/js/jquery.easydropdown.js"></script>
	<link href="~/web/css/nav.css" rel="stylesheet" type="text/css" media="all" />
	<script src="~/web/js/scripts.js" type="text/javascript"></script>
	<!--js-->
	<!---- start-smoth-scrolling---->
	<script type="text/javascript" src="~/web/js/move-top.js"></script>
	<script type="text/javascript" src="~/web/js/easing.js"></script>
	<script type="text/javascript">
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
			});
		});
	</script>

	<!---- start-smoth-scrolling---->


</head>
<body>
	<!--banner-->
	<script src="~/web/js/responsiveslides.min.js"></script>
	<script>
		$(function () {
			$("#slider").responsiveSlides({
				auto: true,
				nav: true,
				speed: 500,
				namespace: "callbacks",
				pager: true,
			});
		});
	</script>
	<div class="banner-bg banner-bg1">
		<div class="container">
			<div class="header">
				<div class="logo">
					<a href="#"><img src="~/web/images/logo.png" alt="" /></a>
				</div>
				<div class="top-nav">
					<label class="mobile_menu" for="mobile_menu">
						<span>Menu</span>
					</label>
					<input id="mobile_menu" type="checkbox">
					<ul class="nav">
						

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="Index">Bisikletler</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Aksesuar" asp-action="Index">Aksesuar</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Aksesuar" asp-action="Parca">Parçalar</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="AdminAnaSayfa" asp-action="Index">Admin</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="İletisim" asp-action="Index">Bize Ulaşın</a>
						</li>

						<a class="shop" href="/Sepet/Index"><img src="~/web/images/cart.png" alt="" /></a>

						<li
							<partial name="_LoginPartial" />
						</li>
					

					</ul>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		<div class="caption">
			<div class="slider">
				<div class="callbacks_container">
					<ul class="rslides" id="slider">
						<li><h1>DAĞ BİSİKLETLERİ</h1></li>
						<li><h1>HIZ BİSİKLETLERİ</h1></li>
						<li><h1>ŞEHİR-YOL BİSİKLETLERİ</h1></li>
					</ul>
					<p>Yolculuğu <span>siz</span> yaratırsınız,</span> Biz parçaları tedarik <span>ederiz.</span></p>
				</div>
			</div>
		</div>
		<div class="dwn">


			<a class="scroll" href="#cate"><img src="~/web/images/scroll.png" alt="" /></a>
		</div>
	</div>


	<!--/banner-->
	<div id="cate" class="categories">
		<div class="container">
			<h3>Kategoriler</h3>
			<div class="categorie-grids">
				<a href="bicycles.html">
					<div class="col-md-4 cate-grid grid1">
						<h4>DAĞ BİSİKLETLERİ</h4>
						<p>Dağlara tırmanmaya hazır mısınız ?</p>
					</div>	
				</a>
				<a href="bicycles.html">
					<div class="col-md-4 cate-grid grid2">
						<h4>HIZ BİSİKLETLERİ</h4>
						<p>Özel Hız Bisiklet Bileşenleri</p>
					</div>	
				</a>
				<a href="bicycles.html">
					<div class="col-md-4 cate-grid grid3">
						<h4>YOL BİSİKLETLERİ</h4>
						<p>Street Playground</p>
					</div>	
				</a>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
	<!--bikes-->
	<div class="bikes">
		<h3>POPÜLER BİSİKLETER</h3>
		<div class="bikes-grids">
			<ul id="flexiselDemo1">
				@foreach (var item in Model.Urunler)
				{
					if (@item.KategoriId == 2)
					{

						<li>
							<img src="img/@item.Foto" alt="" />
							<div class="bike-info">
								<div class="model">
									<h4>@item.Ad<span>@item.Fiyat</span></h4>
								</div>
								<div class="model-info">
									<a href="bicycles.html">Satın Al</a>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="viw">
								<a href="Urun/UrunDetay/@item.UrunId">Hızlı Gör</a>
							</div>
						</li>
					}
				}
			</ul>
			<script type="text/javascript">
				$(window).load(function () {
					$("#flexiselDemo1").flexisel({
						visibleItems: 3,
						animationSpeed: 1000,
						autoPlay: true,
						autoPlaySpeed: 3000,
						pauseOnHover: true,
						enableResponsiveBreakpoints: true,
						responsiveBreakpoints: {
							portrait: {
								changePoint: 480,
								visibleItems: 1
							},
							landscape: {
								changePoint: 640,
								visibleItems: 2
							},
							tablet: {
								changePoint: 768,
								visibleItems: 3
							}
						}
					});
				});
			</script>
			<script type="text/javascript" src="~/web/js/jquery.flexisel.js"></script>

		</div>
	</div>
	<!---->
	<!---->


	<div class="footer">
		<div class="container wrap">
			<div class="logo2">
				<a href="index.html"><img src="~/web/images/logo2.png" alt="" /></a>
			</div>
			<div class="ftr-menu">
				<ul>
					<li><a href="bicycles.html">Bisikletler</a></li>
					<li><a href="parts.html">Parçalar</a></li>
					<li><a href="accessories.html">Aksesuarlar</a></li>
					
				</ul>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	<!---->

</body>
</html>

