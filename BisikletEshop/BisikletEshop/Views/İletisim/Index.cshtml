@model BisikletEshop.Models.İletisim

@{
    ViewData["Title"] = "Create";
}


    <div class="using-border py-3">
        <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
              
            </ul>
        </div>
    </div>
    

    <section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
        <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
            <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Bize Ulaşın</h3>
            <div class="contact-list-grid">
                <form asp-action="Index">
                    <div class=" agile-wls-contact-mid">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group contact-forms">

                            <input type="text" name="AdSoyad" placeholder="Ad , SoyAd:*" required>
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>

                        <div class="form-group contact-forms">
                            <input type="text" name="Email" placeholder="Email:*" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group contact-forms">
                            <textarea placeholder="Lütfen Mesajınızı Yazın:*" name="MesajMetni" required></textarea>
                            <span asp-validation-for="MesajMetni" class="text-danger"></span>
                            <button type="submit" class="btn btn-block sent-butnn">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
