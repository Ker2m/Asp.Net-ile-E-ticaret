@model List<Urun>

<div class="product">
	<div class="container">
		<div class="ctnt-bar cntnt">
			<div class="content-bar">
				<div class="single-page">
					
					<!--Include the Etalage files-->
					<link rel="stylesheet" href="~/web/css/etalage.css">
					<script src="~/web/js/jquery.etalage.min.js"></script>
					<script>
						jQuery(document).ready(function ($) {

							$('#etalage').etalage({
								thumb_image_width: 400,
								thumb_image_height: 400,
								source_image_width: 800,
								source_image_height: 1000,
								show_hint: true,
								click_callback: function (image_anchor, instance_id) {
									alert('Callback example:\nYou clicked on an image with the anchor: "' + image_anchor + '"\n(in Etalage instance: "' + instance_id + '")');
								}
							});

						});
					</script>
					<!--//details-product-slider-->
					<div class="details-left-slider">
						<div class="grid images_3_of_2">
							@foreach (var item in Model)
							{


								<ul id="etalage">
									<li>
										<a href="optionallink.html">
											<img class="etalage_thumb_image" src="/img/@item.Foto" class="img-responsive" />
											<img class="etalage_source_image" src="/img/@item.Foto" class="img-responsive" title="" />
										</a>
									</li>
									<li>
										<a href="optionallink.html">
											<img class="etalage_thumb_image" src="/img/@item.Foto" class="img-responsive" />
											<img class="etalage_source_image" src="/img/@item.Foto" class="img-responsive" title="" />
										</a>
									</li>
									<li>
										<a href="optionallink.html">
											<img class="etalage_thumb_image" src="/img/@item.Foto" class="img-responsive" />
											<img class="etalage_source_image" src="/img/@item.Foto" class="img-responsive" title="" />
										</a>
									</li>
									<li>
										<a href="optionallink.html">
											<img class="etalage_thumb_image" src="/img/@item.Foto" class="img-responsive" />
											<img class="etalage_source_image" src="/img/@item.Foto" class="img-responsive" title="" />
										</a>
									</li>
								</ul>
							}
						</div>
					</div>
					@foreach (var item in Model)
					{
						<div class="details-left-info">
							<h3>@item.Ad</h3>
							<h4>@item.Model</h4>
							<h4></h4>
							<p><label>₺</label> @item.Fiyat </p>
							
							<div class="btn_form">
								<a href="/Sepet/SepeteUrunEkle/@item.UrunId">Sepete Ekle</a>
							</div>
							<div class="bike-type">

								<p>BRAND  ::<a href="#">@item.Kategori</a></p>
							</div>
							<h5>Description  ::</h5>
							<p class="desc">
								@item.Aciklama
							</p>
						</div>
					}
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
	</div>
</div>
