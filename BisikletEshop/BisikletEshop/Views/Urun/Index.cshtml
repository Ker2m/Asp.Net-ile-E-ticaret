@model List<Urun>




	<div class="bikes">

		<div class="mountain-sec">

			<h2>Dağ Bisikleti</h2

			@foreach (var item in Model)
			{
				if (@item.KategoriId == 2 )
				{
					<a href="/Urun/UrunDetay">
					<div class="bike">
						<img src="img/@item.Foto" alt="" />
						<div class="bike-cost">
							<div class="bike-mdl">
								<h4>@item.Ad<span>@item.Model</span></h4>
							</div>
							<div class="clearfix"></div>
						</div>
						<div class="fast-viw">
							<a href="Urun/UrunDetay/@item.UrunId">Hızlı Gör</a>
						</div>
					</div>
					</a>
				}
			}
		
		
			<div class="clearfix"></div>
		</div>

		<div class="singlespeed-sec">
			<h2>Hızlı Bisikletler</h2>
			@foreach (var item in Model)
			{
				if (@item.KategoriId == 3)
				{
					<a href="/Urun/UrunDetay">
						<div class="bike">
							<img src="img/@item.Foto" alt="" />
							<div class="bike-cost">
								<div class="bike-mdl">
									<h4>@item.Ad<span>@item.Model</span></h4>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="fast-viw">
								<a href="Urun/UrunDetay/@item.UrunId">Hızlı Gör</a>
							</div>
						</div>
					</a>
				}
			}

			<div class="clearfix"></div>
		</div>

		<div class="road-sec">
			<h2>Yol Bisikletleri</h2>
			@foreach (var item in Model)
			{
				if (@item.KategoriId == 4)
				{

					<a href="/Urun/UrunDetay">
						<div class="bike">
							<img src="img/@item.Foto" alt="" />
							<div class="bike-cost">
								<div class="bike-mdl">
									<h4>@item.Ad<span>@item.Model</span></h4>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="fast-viw">
								<a href="Urun/UrunDetay/@item.UrunId">Hızlı Gör</a>
							</div>
						</div>
					</a>
				}
			}

			<div class="clearfix"></div>
		</div>

	</div>
