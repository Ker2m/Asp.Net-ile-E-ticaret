<!DOCTYPE html>
<html>
<head>
	<link href="~/web/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<!-- jQuery (Bootstrap's JavaScript plugins) -->
	<script src="~/web/js/jquery.min.js"></script>
	<!-- Custom Theme files -->
	<link href="~/web/css/form.css" rel="stylesheet" type="text/css" media="all" />
	<link href="~/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
	<!-- Custom Theme files -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Bike-shop Responsive web template" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!--webfont-->
	<link href='http://fonts.googleapis.com/css?family=Roboto:500,900,100,300,700,400' rel='stylesheet' type='text/css'>
	<!--webfont-->
	<!-- dropdown -->
	<script src="~/web/js/jquery.easydropdown.js"></script>
	<link href="~/web/css/nav.css" rel="stylesheet" type="text/css" media="all" />
	<script src="~/web/js/scripts.js" type="text/javascript"></script>
	<!--js-->
	<!---- start-smoth-scrolling---->
	<script type="text/javascript" src="~/web/js/move-top.js"></script>
	<script type="text/javascript" src="~/web/js/easing.js"></script>
	<script type="text/javascript">
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
			});
		});
	</script>



</head>
<body>
	<script src="~/web/js/responsiveslides.min.js"></script>
	<script>
		$(function () {
			$("#slider").responsiveSlides({
				auto: false,
				nav: true,
				speed: 500,
				namespace: "callbacks",
				pager: true,
			});
		});
	</script>
	<div class="banner-bg banner-sec">
		<div class="container">
			<div class="header">
				<div class="logo">
					<a href="Home/Index"><img src="~/web/images/logo.png" alt="" /></a>
				</div>
				<div class="top-nav">
					<label class="mobile_menu" for="mobile_menu">
						<span>Menu</span>
					</label>
					<input id="mobile_menu" type="checkbox">
					<ul class="nav">

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="Index">Bisikletler</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Aksesuar" asp-action="Index">Aksesuar</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Aksesuar" asp-action="Parca">Parçalar</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="AdminAnaSayfa" asp-action="Index">Admin</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="İletisim" asp-action="Index">Bize Ulaşın</a>
						</li>

						<a class="shop" href="/Sepet/Index"><img src="~/web/images/cart.png" alt="" /></a>

						<li
							<partial name="_LoginPartial" />
						</li>
					</ul>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		
	</div>
	@RenderBody()

	<div class="footer">
		<div class="container wrap">
			<div class="logo2">
				<a href="index.html"><img src="~/web/images/logo2.png" alt="" /></a>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	<!---->
	

	
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

	

</body>
</html>
